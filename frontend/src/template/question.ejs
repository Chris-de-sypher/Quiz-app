<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Question</title>
    <link rel="stylesheet" href="/user/v1/styles/question.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/regular.min.css"
      integrity="sha512-KYEnM30Gjf5tMbgsrQJsR0FSpufP9S4EiAYi168MvTjK6E83x3r6PTvLPlXYX350/doBXmTFUEnJr/nCsDovuw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/brands.min.js"
      integrity="sha512-ojD9xRtdGdJLd9K/vMhV6GyO8G9wVrofDXmX4AjrKPctyKTLaVVwuAJhZanincPnSprZv1Nc3iDpxIi/6+Xv7A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>
  <body>
    <div class="popup_modal">
      <p class="alert">successful</p>
      <span class="fa-solid fa-xmark"></span>
    </div>
    <div class="container">
      <h2>Create Question</h2>
      <p>Quiz Title: <span><%= title %></span></p>
      <p>Quiz Description: <span><%= desc %></span></p>
      <p>
        Number of questions: <span class="number_questions"><%= length_of_questions %></span>/<span
          class="total_number_questions"
        ><%= total_number_of_questions %></span>
      </p>
      <p class="msg"></p>
      <form id="questionForm">
        <label for="question">Question:</label>
        <div class="textarea">
          <textarea id="question" name="question" rows="4" required></textarea>
          <div class="increment">
            <span class="increase">0</span>/<span class="total-length">30</span>
          </div>
        </div>

        <label for="options">Options:</label>
        <input
          type="text"
          id="option1"
          name="option1"
          placeholder="Option 1"
          required
        />
        <input
          type="text"
          id="option2"
          name="option2"
          placeholder="Option 2"
          required
        />
        <input
          type="text"
          id="option3"
          name="option3"
          placeholder="Option 3"
          required
        />
        <input
          type="text"
          id="option4"
          name="option4"
          placeholder="Option 4"
          required
        />

        <label for="correctAnswer">Correct Answer (Option Number):</label>
        <input
          type="text"
          id="correctAnswer"
          name="correctAnswer"
          required
        />

        <button type="submit">Create Question</button>
      </form>
    </div>
    <script src="/user/v1/script/question.js"></script>
  </body>
</html>
